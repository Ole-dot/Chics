<script>
function showLogin() {
    document.getElementById("register").classList.add("hidden");
    document.getElementById("login").classList.remove("hidden");
    document.getElementById("msg").innerText = "";
}

function showRegister() {
    document.getElementById("login").classList.add("hidden");
    document.getElementById("register").classList.remove("hidden");
    document.getElementById("msg").innerText = "";
}

function register() {
    let name = document.getElementById("r-name").value;
    let email = document.getElementById("r-email").value;
    let pass = document.getElementById("r-pass").value;

    if (name === "" || email === "" || pass === "") {
        alert("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è");
        return;
    }

    document.getElementById("msg").innerText = "–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –ø—Ä–æ—à–ª–∞ —É—Å–ø–µ—à–Ω–æ üíó";
    showLogin();
}

function login() {
    let email = document.getElementById("l-email").value;
    let pass = document.getElementById("l-pass").value;

    if (email === "" || pass === "") {
        alert("–í–≤–µ–¥–∏—Ç–µ email –∏ –ø–∞—Ä–æ–ª—å");
        return;
    }

    document.getElementById("msg").innerText = "–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å ‚ú®";
}
